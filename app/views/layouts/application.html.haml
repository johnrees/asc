!!!
%html.no-js
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= content_for?(:title) ? yield(:title) : "Untitled" 
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %script{:src => "js/vendor/modernizr-2.6.2.min.js"}
  %body
    %header
      .container
        #logo
          = image_tag "asc.png"
        .right
          #i18n
            %ul
              %li= link_to_unless_current "Español", locale: "es"
              %li= link_to_unless_current "العربية", locale: "ar"
              %li= link_to_unless_current "русский", locale: "ru"
              %li= link_to_unless_current "English", locale: "en"
          .contact= t 'header.contact'
          %nav
            %ul
              %li= link_to translate("nav.gallery"), "#"
              %li= link_to translate("nav.contact"), contact_path
              %li= link_to translate("nav.careers"), careers_path
              %li= link_to translate("nav.events"), "#"
              %li= link_to translate("nav.news"), "#"
              %li= link_to translate("nav.quality"), quality_path
              %li= link_to translate("nav.management_team"), "#"
              %li= link_to translate("nav.about_us"), about_us_path
              %li= link_to translate("nav.services"), services_path
    .row
      .columns.twelve
        #hero
          %h1= @page_title
    = yield
    %footer
      .row
        .columns.eight
          .address
            %p Registered Address:
            %p Airline Services Components Limited, Canberra House, Robeson Way,
            %p Sharston Green Business Park, Manchester, M22 4SX
            = link_to "Terms and Conditions of Sales", "#"
            = link_to "Terms and Conditions of Purchase", "#"
        .columns.four
          %p © #{Time.now.year} Airline Services Components Ltd. - Company No. 01503647
          %p Part of the Airline Services Group
          = image_tag "airline_services_group.png"

    %script{:src => "js/main.js"}
    :javascript
      var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));