.row
  .column.twentyfour
    #slider.flexslider
      %ul.slides
        - Service.all.each do |service|
          %li{style: "background: url(#{service.image_url}) right no-repeat"}
            .info{style: 'width: 344px'}
              .title= link_to service.name, service
              .description= truncate service.description

.row.modules
  .columns.nine
    .box
      %h2= translate 'home.about_us'
      = image_tag "about_us.jpg"
      .content
        %ul
          %li
            = translate 'home.about_us.description'
            / %p Airline Services Components Limited (ASC) specialises in the supply and management of rotable components from its storage and distribution warehouse at London Gatwick (LGW).

            / %p We pride ourselves on our flexibility in dealing with customer requirements and our management structure, allowing us to make quick decisions thus expediting our processes and optimising operational performance.

            = link_to "Read More", about_us_path, class: 'more'

  .columns.nine.news
    .box
      %h2= t 'home.latest_news'
      = image_tag "latest_news.jpg"
      .content
        %ul
          - Post.homepage.each do |post|
            %li.clickable
              .title= post
              .date= post.published_at.stamp("13 Oct 2013")
              = link_to "Read More", post, class: 'more'

  .columns.six
    .box
      %h2= t 'home.upcoming_events'
      = image_tag "events.jpg"
      .content
        %ul.clickable
          - Event.homepage.each do |event|
            %li.event
              .details
                .date= event.starts_on.stamp("22 Jan 2013")
                .name= event
              = link_to "Read More", events_path, class: 'more'


.row.images
  .columns.nine
    .box
      / = @include image-link(344px, 182px, "brochure.png");
      = link_to "#" do
        = image_tag "brochure.jpg"

  .columns.nine
    .box
      / = @include image-link(344px, 164px, "airline_services.png");
      = link_to "http://www.airline-services.com/" do
        = image_tag "airline_services.jpg"

  .columns.six
    .box
      / = @include image-link(224px, 164px, "careers.png");
      = link_to careers_path do
        = image_tag "careers.jpg"